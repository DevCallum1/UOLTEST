@using Resgrid.Framework
@using Resgrid.Model
@using RestSharp.Extensions
@model Resgrid.Web.Areas.User.Models.Workshifts.ViewWorkshiftDayView
@{
    ViewBag.Title = "Resgrid | View Static Shift Day";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}
@section Styles
    {

}


    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>View Shift Day</h2>
            <ol class="breadcrumb">
                <li>
                    <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">Home</a>
                </li>
                <li>
                    <a asp-controller="Shifts" asp-action="Index" asp-route-area="User">Shifts</a>
                </li>
                <li class="active">
                    <strong>View Static Shift Day</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="col-md-4">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-calendar fa-5x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <span> Shift Day </span>
                            <h2 class="font-bold">
                                <time datetime="@Model.Day.Day.ToShortDateString()">
                                    <span class="day">@Model.Day.Day.Day</span>
                                    <span class="month">@DateTimeHelpers.MonthToShortString(Model.Day.Day.Month)</span>
                                    <span class="year">@Model.Day.Day.Year</span>
                                    <span class="time">@String.Format("{0:00}:{1:00}", Model.Shift.Start.Hour, Model.Shift.Start.Minute, 0)</span>
                                </time>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Shift Day Detail</h5>
                    </div>
                    <div>
                        <div class="ibox-content profile-content">
                            <h4><strong>@Model.Shift.Name</strong></h4>
                            <div class="row">
                                <div class="col-lg-10">
                                    @Html.Raw(Model.Shift.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Units</h5>
                    </div>
                    <div class="ibox-content">
                        <div>
                            <div class="feed-activity-list">
                                @foreach (var enitity in Model.Shift.Entities)
                            {
                                var unit = Model.Units.FirstOrDefault(x => x.UnitId == int.Parse(enitity.BackingId));
                                <div class="feed-element">
                                    <div class="media-body">
                                        <strong>@unit.Name</strong><br>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Unit Role
                                                    </th>
                                                    <th>

                                                    </th>
                                                    <th>

                                                    </th>
                                                    <th>

                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (unit.Roles != null && unit.Roles.Any())
                                                {
                                                    @foreach (var role in unit.Roles)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @role.Name
                                                            </td>
                                                            <td>
                                                            </td>
                                                            <td>
                                                            </td>
                                                            <td>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Personnel</h5>
                    </div>
                    <div class="ibox-content">

                        <div>
                            <div class="feed-activity-list">
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @section Scripts
        {

    }
